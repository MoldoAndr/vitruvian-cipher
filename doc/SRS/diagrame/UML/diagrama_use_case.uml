@startuml
left to right direction
actor "Anonymous" as anon
actor "User" as user
actor "Admin" as admin
actor "External API Consumer" as api

rectangle "Vitruvian Cipher Platform" {
    usecase "Verifica parola" as UC1
    usecase "Factorizeaza numar prim" as UC2
    usecase "Intreaba teorie criptografica" as UC3
    usecase "Executa operatie criptografica" as UC4
    usecase "Detecteaza criptosistem" as UC5
    usecase "Autentifica utilizator" as UC6
    usecase "Gestioneaza cont" as UC7
    usecase "Administreaza utilizatori" as UC8
    usecase "Administreaza API keys" as UC9
    usecase "Vizualizeaza audit logs" as UC10
}

anon --> UC1
anon --> UC6

user --> UC1
user --> UC2
user --> UC3
user --> UC4
user --> UC5
user --> UC7

api --> UC1
api --> UC2
api --> UC4
api --> UC5

admin --|> user
admin --> UC8
admin --> UC9
admin --> UC10

UC7 ..> UC6 : <<include>>
UC8 ..> UC6 : <<include>>
UC9 ..> UC6 : <<include>>
UC10 ..> UC6 : <<include>>
@enduml
