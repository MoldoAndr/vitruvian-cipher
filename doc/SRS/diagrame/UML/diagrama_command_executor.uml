@startuml
skinparam componentStyle rectangle
skinparam shadowing false
skinparam defaultFontName Arial
skinparam defaultFontSize 10
skinparam backgroundColor #FFFFFF
skinparam nodesep 30
skinparam ranksep 25
skinparam linetype ortho

left to right direction

component "Input" as Input
component "API" as API
component "Output" as Output

rectangle "Validator" as Validator {
    component "Input Sanitization" as Sanit
    component "Command Allowlist" as Allowlist
}

rectangle "Crypto Operations" as CryptoOps {
    component "Encoding / Hashing" as EncHash
    component "Symmetric / Asymmetric" as SymAsym
    component "PQC" as PQC
}

rectangle "External Libraries" as Libraries {
    component "OpenSSL 3.x" as OpenSSL
    component "oqsprovider" as OQS
}

Input --> API
API --> Validator
Validator --> CryptoOps
CryptoOps --> Libraries
API --> Output

@enduml
