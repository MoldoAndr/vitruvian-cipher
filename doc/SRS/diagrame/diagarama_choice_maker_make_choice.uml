@startuml
skinparam componentStyle rectangle
skinparam shadowing false
skinparam defaultFontName Arial
skinparam defaultFontSize 10
skinparam backgroundColor #FFFFFF
skinparam nodesep 40
skinparam ranksep 30
skinparam component {
    BackgroundColor #e5eaeeff
    BorderColor #000000
    BorderThickness 1
    FontColor #000000
    FontSize 10
}
skinparam database {
    BackgroundColor #e0e7ebff
    BorderColor #000000
    BorderThickness 1
    FontColor #000000
    FontSize 10
}
skinparam rectangle {
    BackgroundColor #e2e5e7ff
    BorderColor #000000
    BorderThickness 2
    FontColor #000000
    FontSize 11
    FontStyle bold
}
skinparam arrow {
    Color #000000
    Thickness 2
}
skinparam linetype ortho

allowmixing
top to bottom direction

component "Input" as Input

rectangle "inferență" as inf {
    component "API" as API
    component "Pipeline" as Pipeline
}

rectangle "Modele SecureBERT" as Models {
    component "Model intent" as IntentModel
    component "Model entități" as EntityModel
}

rectangle "Antrenare" {
    component "Train scripts" as Trainers
    component "Corpus" as Corpus
}

Input -down-> inf
API -down-> Pipeline
Pipeline -down-> Models
Corpus -down-> Trainers
Trainers -down-> Models

@enduml
