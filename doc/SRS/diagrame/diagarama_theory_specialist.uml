@startuml
skinparam componentStyle rectangle
skinparam shadowing false
skinparam defaultFontName Arial
skinparam defaultFontSize 10
skinparam backgroundColor #FFFFFF
skinparam nodesep 8
skinparam ranksep 8
skinparam component {
    BackgroundColor #e5eaeeff
    BorderColor #000000
    BorderThickness 1
    FontColor #000000
    FontSize 9
}
skinparam database {
    BackgroundColor #e0e7ebff
    BorderColor #000000
    BorderThickness 1
    FontColor #000000
    FontSize 9
}
skinparam rectangle {
    BackgroundColor #e2e5e7ff
    BorderColor #000000
    BorderThickness 2
    FontColor #000000
    FontSize 10
    FontStyle bold
    Padding 2
}
skinparam arrow {
    Color #000000
    Thickness 2
}
skinparam linetype ortho
allowmixing
top to bottom direction

component "API" as API
component "Scheduler" as Scheduler

rectangle "Stocare" as Storage {
    database "SQLite" as SQLiteDB
    component "ChromaDB" as Chroma
    component "Documente" as Docs
    component "Cache modele" as Cache
}

rectangle "Nucleu RAG" as RagCore {
    component "RAGSystem" as RAG
    component "Embedder" as Embed
    component "Reranker" as Reranker
    component "Splitter" as Splitter
    component "Ollama" as Ollama
}

API -down-> Storage
API -down-> RagCore
Scheduler -down-> RagCore
RagCore <-> Storage
@enduml